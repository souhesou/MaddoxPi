{% extends 'base_front.html.twig' %}
{% block container %}
    <div class="active-pink-3 active-pink-4 mb-4">
        <input class="form-control" type="text" placeholder="Search" aria-label="Search">
    </div>
<table class="table">
    <thead>
    <tr>
        <th>Nom</th>
        <th>Prenom</th>
        <th>Age</th>
        <th>Origine</th>
        <th>Action</th>

    </tr>
    </thead>
    <tbody>
    {% for refug in refugie %}
    <tr>
        <td>{{ refug.nom }}</td>
        <td>{{ refug.prenom }}</td>
        <td>{{ refug.age }}</td>
        <td>{{ refug.origine }}</td>
        <td><a href="#"><button class="btn btn-primary">Modifier</button></a> <a href="{{ path('supprimer_Refugie',{'id':refug.id}) }}"><button class="btn btn-primary">Supprimer</button></a></td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}